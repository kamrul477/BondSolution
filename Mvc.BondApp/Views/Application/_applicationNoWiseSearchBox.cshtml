

<div id="fieldDiv">
    @using (Ajax.BeginForm("ApplicationNoWise", "Application",
                               new AjaxOptions
                               {
                                   HttpMethod = "POST",
                                   UpdateTargetId = "fieldDiv"
                               }, htmlAttributes: new { @class = "form-inline" }))
    {

        <div class="form-group">

            @*<input type="text" class="form-control" id="exampleInputAmount" placeholder="Amount">*@
            @Html.Editor("applicationNo", new { htmlAttributes = new { @class = "form-control search-query", required = "Required", @placeholder = "Bond Application No i.e 625/2009" } })
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                Search Applicaiton
            </button>

        </div>

    }
</div>
