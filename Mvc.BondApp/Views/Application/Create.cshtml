                                            <td>@item.BONDPREFIX</td>
                                            <td>@item.BONDNO</td>
                                            <td>@item.BONDVALUE</td>
                                            <td>@item.MATURITYDATE</td>
                                            <td>@item.NOMNAME</td>
                                            <td>@item.BRELATION</td>
                                            <td></td>
                                        </tr>
                                    }
                                }
                            }

                            </tbody>
                        </table>
                        <div class="panel-footer">
                            <div class="form-group">
                                @Html.Label("Total Bond", htmlAttributes: new { @class = "control-label col-md-2" })
